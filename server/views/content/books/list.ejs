<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1>
                <%= title %>
            </h1>
            <!-- ------------------------ -->
            <!-- FIX THE ADD BUTTON BELOW -->
            <!-- ------------------------ -->
            <a href="/books/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Book</a>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Title</th>
                    <th class="text-center col-2">Author</th>
                    <th class="text-center col-1">Year</th>
                    <th class="text-center col-4">Description</th>
                    <th class="text-center col-1">Price</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count=0; count < book.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2">
                            <%= book[count].name %>
                        </td>
                        <td class="text-center col-2">
                            <%= book[count].author %>
                        </td>
                        <td class="text-center col-1">
                            <%= book[count].published %>
                        </td>
                        <td class="text-center col-4">
                            <%= book[count].description %>
                        </td>
                        <td class="text-center col-1">
                            <%= book[count].price %>
                        </td>
                        <td class="text-center col-1">
                            <a href="/books/edit/<%= book[count]._id %>"
                                class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/books/delete/<%= book[count]._id %>"
                                class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>
</main>